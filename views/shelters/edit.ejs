<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Edit Shelter</h1>
        <div class="col-6 offset-3">
            <form action="/shelters/<%=shelter._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="shelter[title]"
                    value="<%=shelter.title%>" required>
                    <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please Enter a Title.
                  </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="shelter[location]" value="<%=shelter.location%>" required>
                    <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please Enter Location.
                  </div>
                </div>
                <div class="mb-3"></div>
                <label class="form-label" for="price">Price</label>
                <div class="input-group mb-3">
                   
                    <span class="input-group-text" id="basic-addon1">$</span>
                    <input type="text" id="price" class="form-control" name="shelter[price]" placeholder="0.00" aria-label="price" aria-describedby="price-label"
                    value="<%=shelter.price%>" required>
                    <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please Give a Price.
                  </div>
                  </div>
                  
              <!--  <div class="mb-3">
                    <label class="form-label" for="image">Add images</label>
                    <input type="file" name="image" id="image" multiple>
                    <div class="valid-feedback">
                    Looks good!
                  </div>
                  <div class="invalid-feedback">
                    Please Add a Image.
                  </div>
                </div>
                -->

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="shelter[description]" required><%=shelter.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                      <div class="invalid-feedback">
                        Please Enter a Message in textarea.
                      </div>
                </div>
                <div class="mb-3">
                  <input class="form-control" type="file" id="image"name="image" multiple>
                </div>

                <div class="mb-3">
                  <% shelter.images.forEach(function(img,i){ %>
                    <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                    <div class="form-check-inline">
                      <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                    </div>
                    <label for="image-<%=i%>">Delete?</label>
                  <% }) %> 
                </div>

                <div class="mb-3"> 
                    <button class="btn btn-info">Update</button>
                </div>
               
            </form>
            <a href="/shelters/<%= shelter._id %> ">Back to Shelter</a>
        </div>
       </div>